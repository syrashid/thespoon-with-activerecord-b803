<h1>Restaurants Index</h1>

<ul>
  <% @restaurants.each do |restaurant| %>

    <li><%= restaurant.name %> - <%= restaurant.rate %> - <%= link_to "View", restaurant_path(restaurant) %> <%= link_to "Edit", edit_restaurant_path(restaurant) %>
    <%= link_to "Delete",
            restaurant_path(restaurant),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
